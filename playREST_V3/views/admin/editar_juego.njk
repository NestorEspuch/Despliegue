{% extends "../public/base.njk" %}
{% block titulo %}Juegos | Editar{% endblock %}
{% block contenido %}
    <h1>Editar juego: {{ juego.nombre }}</h1>
    {% if (juego) %}
        <form action="/juegos/editar/{{ juego.id }}" method="post">
            <div class="form-group mb-3">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" name="nombre" placeholder="Nombre del contacto..." value="{{ juego.nombre }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="descripcion">Descripci√≥n:</label>
                <input type="text" class="form-control" name="descripcion" value="{{ juego.descripcion }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="edad">Edad:</label>
                <input type="number" class="form-control" name="edad" placeholder="{{ juego.edad }}" value="{{ juego.edad }}"/>
            </div>
            <div class="form-group mb-3">
                <label for="jugadoresPermitidos">Jugadores permitidos:</label>
                <input type="number" class="form-control" name="jugadoresPermitido" placeholder="{{ juego.juegadoresPermitido }}" value="{{ juego.jugadoresPermitido }}"/>
            </div>
            <div class="form-group mb-3">
                <select name="tipo" id="tipo">
                    <option value="rol">Rol</option>
                    <option value="escape">Escape</option>
                    <option value="dados">Dados</option>
                    <option value="fichas">Fichas</option>
                    <option value="cartas">Cartas</option>
                    <option value="tablero">Tablero</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label for="precio">Precio:</label>
                <input type="number" class="form-control" name="precio" placeholder="{{ juego.precio }}" value="{{ juego.precio }}"/>
            </div>
             <div class="form-group mb-3">
                <label for="imagen">Imagen:</label>
                <input type="image" id="imagen" src="{{ juego.imagen }}" alt="{{ juego.nombre }}">
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    {% else %}
        <div class="alert alert-danger">juego no especificado</div>
    {% endif %}
{% endblock %}